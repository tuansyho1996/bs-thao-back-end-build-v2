<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodejs Basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload-image">Upload image</a>
    </div>
    <div>
        <div class="w3-container">
            <h2>List users Table</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td>
                                <button type="button"><a href="/detail/user/<%= dataUser[i].id %>">Detail</a></button>
                                <a href="/edit-user/<%= dataUser[i].id %>">
                                    <button type="button">Edit</button>
                                </a>
                                <form action="/delete-user" method="POST">
                                    <button type="submit">Delete</button>
                                    <input type="text" hidden name="id" value=<%=dataUser[i].id %> >
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <div class="form-create-new-user">
            <h2>Create new user</h2>
            <form action="/create-new-user" method="POST">
                <div>
                    <label for="">First name</label>
                    <input type="text" name="firstName">
                </div>
                <div>
                    <label for="">Last name</label>
                    <input type="text" name="lastName">
                </div>
                <div>
                    <label for="">Email</label>
                    <input type="email" name="email">
                </div>

                <div>
                    <label for="">Address</label>
                    <input type="text" name="address">
                </div>
                <button type="submit" class="btn-submit">Submit</button>
            </form>
        </div>

    </div>
</body>

</html>